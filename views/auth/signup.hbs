<div class="container align-middle modal-dialog-centered" style="">
    <div class="row mx-auto align-middle">
      <div class="col">
        <h1 class="titles">Crear Cuenta</h1>
        <p style="color:red" class="justify-content-md-center display-4">
      {{#if err}}{{err}}{{/if}}
        </p>
      </div>
    </div>
</div>
<div class="container-fluid align-middle justify-content-md-center ">
  <div class="row  align-middle">
    <div class="col-sm col-md-6 offset-md-3">
      <form validated action="/signup" method="post">
        <div class="form-group">
          <label for="email1" class="class-name">Email:</label>
          <input type="email" class="form-control" name="email" id="email1" aria-describedby="emailHelp" placeholder="email@email.com" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="username">Nombre de Usuario:</label>
          <input type="text" class="form-control" id="username" name="username" aria-describedby="userHelp" placeholder="jonhDoe" value="{{username}}" required>
        </div>
        <div class="form-group">
          <label for="password01">Password:</label>
          <input class="form-control" id="password01" placeholder="Password" value="{{password}}" required placeholder="Tu password de usuario" name="password" type="password">
        </div>
        <div class="form-group">
          <label for="password2">Repite tu password:</label>
          <input class="form-control" id="password02" placeholder="Repite tu password" value="{{password2}}" required placeholder="Tu password de usuario" name="password2" type="password">
        </div>

        <button type="submit" class="btn col btn-form mx-auto btn-outline-success">Enviar</button>
      </form>
    </div>
  </div>
</div>

